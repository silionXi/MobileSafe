<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="高级工具" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="addressQuery"
        android:padding="5dp"
        android:text="号码归属地查询"
        android:textColor="@color/ta"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/global_dashed_line_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="commonQuery"
        android:padding="5dp"
        android:text="常用号码查询"
        android:textColor="@color/ta"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/global_dashed_line_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="smsBackup"
        android:padding="5dp"
        android:text="短信备份"
        android:textColor="@color/ta"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/global_dashed_line_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@android:drawable/ic_menu_more"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:onClick="appLock"
        android:padding="5dp"
        android:text="程序锁"
        android:textColor="@color/ta"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/global_dashed_line_shape" />
</LinearLayout>