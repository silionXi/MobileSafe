<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:silion="http://schemas.android.com/apk/com.silion.mobilesafe"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="2.手机卡绑定"/>

    <TextView
        style="@style/ContentStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="通过绑定SIM卡可以："/>

    <TextView
        style="@style/ContentStyle"
        android:text="下次重启手机如果发现SIM卡发生变化就会发送报警短信"/>

    <com.silion.mobilesafe.view.SettingItemView
        android:id="@+id/sivBoundSim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        silion:descOffText="SIM卡未绑定"
        silion:descOnText="SIM卡已绑定"
        silion:titleText="点击绑定SIM卡"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/lostfind_sim"/>
    </RelativeLayout>
</LinearLayout>